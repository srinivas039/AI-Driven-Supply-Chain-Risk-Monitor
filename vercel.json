{
  "buildCommand": "cd front-end && npm install && npm run build",
  "outputDirectory": "front-end/build",
  "public": "front-end/build",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "MONGODB_URI": "@mongodb_uri",
    "METEOSTAT_API_KEY": "@meteostat_api_key"
  },
  "functions": {
    "api/**/*.js": {
      "memory": 512,
      "maxDuration": 30
    }
  }
}
